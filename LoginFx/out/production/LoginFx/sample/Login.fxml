<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.LoginController">
   <children>
      <Pane prefHeight="350.0" prefWidth="350.0">
         <children>
            <Label layoutX="14.0" layoutY="14.0" text="Login">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
            <Label layoutX="30.0" layoutY="129.0" text="Username/Email" />
            <Label layoutX="30.0" layoutY="209.0" text="Password" />
            <TextField fx:id="txtUsername" layoutX="28.0" layoutY="146.0" prefHeight="25.0" prefWidth="290.0" />
            <PasswordField fx:id="txtPassword" layoutX="28.0" layoutY="226.0" prefHeight="25.0" prefWidth="290.0" />
            <Button fx:id="btnLogin" layoutX="151.0" layoutY="274.0" mnemonicParsing="false" onAction="#login" text="Log in" />
            <Button fx:id="btnSignup" layoutX="14.0" layoutY="311.0" mnemonicParsing="false" onAction="#signup" text="Sign up" />
         </children>
      </Pane>
   </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
